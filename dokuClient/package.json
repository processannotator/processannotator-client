  "main": "main.js",
  "authors": [
    "Tom Brewe <tom.brewe@fu-berlin.de>",
    "Anouk Hoffmeister <anouk.hoffmeister@hu-berlin.de>",
    "Sebastian Felix Zappe"
  ],
  "dependencies": {
    "pouchdb": "^6.1.1",
    "pouchdb-all-dbs": "^1.0.1",
    "pouchdb-authentication": "^0.5.5",
