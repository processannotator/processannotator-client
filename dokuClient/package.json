{
  "name": "DokuClient",
  "version": "0.2.0",
  "main": "main.js",
  "dependencies": {
    "npm": "^3.9.6",
    "pouchdb": "^5.3.2",
    "pouchdb-all-dbs": "^1.0.1",
    "pouchdb-authentication": "^0.5.1",
    "worker-pouch": "^1.0.2",
    "noble": "^1.1.0",
    "electron-reload": "^1.0.2"
  },
  "scripts": {
    "build": "rollup -i src/main-app.js -o src/main-app-bundle.js",
    "dev": "npm run build && (electron . --dev &) && rollup --watch -i src/main-app.js -o src/main-app-bundle.js",
    "install": "./node_modules/.bin/electron-rebuild && bower install",
    "start": "npm run build && electron .",
    "package": "npm run build && electron-packager . ProcessAnnotator --platform=darwin --arch=x64 --out=dist --overwrite"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-preset-es2015": "^6.x.x",
    "babel-watch": "^2.0.3",
    "devtron": "^1.1.1",
    "electron": "^1.4.5",
    "electron-packager": "^8.2.0",
    "electron-rebuild": "^1.1.5",
    "electron-reload": "^1.0.2",
    "rollup": "^0.36.3",
    "rollup-watch": "^2.5.0"
  }
}
