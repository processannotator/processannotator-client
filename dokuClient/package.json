    "devtron": "^1.1.1",
    "electron": "^1.4.8",
    "electron-packager": "^8.2.0",
    "electron-rebuild": "^1.2.1",
    "electron-reload": "^1.0.2",
    "rollup": "^0.36.4",
    "rollup-watch": "^2.5.0"
  }
