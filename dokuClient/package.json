{
  "name": "DokuClient",
  "version": "0.3.0",
  "main": "index.js",
  "authors": [
    "Tom Brewe <tom.brewe@fu-berlin.de>",
    "Anouk Hoffmeister <anouk.hoffmeister@hu-berlin.de>",
    "Sebastian Felix Zappe"
  ],
  "dependencies": {
    "animejs": "^2.0.2",
    "bower": "^1.8.0",
    "noble": "^1.1.0",
    "pouchdb": "^6.2.0",
    "pouchdb-all-dbs": "^1.0.1",
    "pouchdb-authentication": "^0.5.5",
    "worker-pouch": "^2.0.0"
  },
  "scripts": {
    "polymer-bundle": "polymer-bundler ./src/main-app.html --strip-comments --inline-scripts --inline-css --rewrite-urls-in-templates > build/src/main-app.bundle.html",
    "build": "rollup -c",
    "build_new": "rollup -c rollup.inline.config.js && rm -rf ./build && mkdir -p build/src && npm run polymer-bundle && cp ./index.js ./build/index.js && cp ./index.html build/index.html && cp -r node_modules build/ && cp -r images build/ && cp -r fonts build/",
    "build_dev_server": "rollup --environment dev -c",
    "install": "./node_modules/.bin/electron-rebuild && bower install --verbose",
    "start": "npm run build && electron .",
    "start_dev_server": "printf \"There are issues with installing leveldown (pouchdb server) and electron, therefore make sure to install pouchdb-server globally if you want to test locally!\" && concurrently --kill-others \"npm run build_dev_server && electron .\" \"pouchdb-server --in-memory --config ./.pouchdb_server_config/config.json --dir ./.pouchdb_server_config/dbs/ --logPath ./.pouchdb_server_config/logs/\" ",
    "package": "npm run build_new && electron-packager ./build ProcessAnnotator --platform=darwin --arch=x64 --out=dist --overwrite"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-env": "^1.1.8",
    "babel-watch": "^2.0.3",
    "concurrently": "^3.4.0",
    "devtron": "^1.1.1",
    "electron": "^1.6.11",
    "electron-packager": "^8.2.0",
    "electron-rebuild": "^1.5.11",
    "polymer-bundler": "^3.0.1",
    "rollup": "^0.36.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-watch": "^2.5.0"
  }
}
